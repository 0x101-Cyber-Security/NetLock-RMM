    private async Task Remote_Screen_Refresh_Timer_Stop()
    {
        try
        {
            remote_screen_refresh_timer.Dispose();
        }
        catch (Exception ex)
        {
            Logging.Handler.Error("/dashboard -> Remote_Screen_Refresh_Timer_Stop", "General error", ex.ToString());
        }

        connected = false;

        MudDialog.Close();

        StateHasChanged();
    }

    private System.Threading.Timer remote_screen_terminate_timer;
    private DateTime auto_cancel_time_datetime;

    private async Task Auto_Terminate_Screen_Sharing_Timer_Setup()
    {
        auto_cancel_time_datetime = DateTime.Now.AddMinutes(15);

        StateHasChanged();

        remote_screen_terminate_timer = new System.Threading.Timer(async (e) =>
        {
            // Use InvokeAsync to call up the UI thread
            await InvokeAsync(() =>
            {
                remote_screen_refresh_timer.Dispose();
                MudDialog.Close();

                Snackbar.Add(Localizer["remote_session_auto_terminated"], Severity.Info);
            });
        }, null, 900000, Timeout.Infinite); // Timeout.Infinite for single execution
    }

