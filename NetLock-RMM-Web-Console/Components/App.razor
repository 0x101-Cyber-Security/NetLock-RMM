<body>
    <Routes @rendermode="RenderMode.InteractiveServer" />
    <script>
        window.isDarkMode = function () {
            return window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        };
    </script>
    <script src="_framework/blazor.web.js"></script>
