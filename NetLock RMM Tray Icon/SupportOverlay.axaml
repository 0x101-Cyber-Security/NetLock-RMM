<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NetLock_RMM_Tray_Icon.SupportOverlay"
        Title="Support Connected"
        Width="320" Height="110"
        WindowStartupLocation="Manual"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        SystemDecorations="None"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">
    
    <Border Background="#5C6BC0" 
            CornerRadius="12" 
            Margin="10"
            Opacity="0.96">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                              OffsetX="0" 
                              OffsetY="4" 
                              Color="Black" 
                              Opacity="0.25"/>
        </Border.Effect>
        
        <Grid Margin="16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Avatar Circle with Initials -->
            <Border Grid.Column="0" 
                    Width="50" 
                    Height="50" 
                    CornerRadius="25"
                    Background="#7986CB"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <TextBlock x:Name="InitialsTextBlock"
                          Text="?"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            
            <!-- Text content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="SupportNameTextBlock"
                           Text="Support Operator" 
                           FontSize="15" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,3"/>
                <TextBlock x:Name="SupportTitleTextBlock"
                           Text="Support-Admin"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,0,0,2"/>
                <TextBlock Text="ist verbunden" 
                           FontSize="11" 
                           Foreground="White" 
                           Opacity="0.85"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
