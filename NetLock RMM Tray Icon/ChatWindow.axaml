        x:Class="NetLock_RMM_Tray_Icon.ChatWindow"
        Title="NetLock RMM Chat"
        Width="900" Height="650"
        MinWidth="600" MinHeight="80"
        Background="#F0F2F5"
        Icon="Assets/trayicon.ico"
        CanResize="True"
        WindowStartupLocation="CenterScreen">

